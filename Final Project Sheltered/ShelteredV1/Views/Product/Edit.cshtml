@model ShelteredV1.Entity.Product

@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="CtgryAdd">
	<h2>Ürün Düzenleme</h2>


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "TDngr" })
			@Html.HiddenFor(model => model.Id)

			<div class="form-group">
				@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.Description, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.Price, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.Stock, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.Image, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.IsHome, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					<div class="checkbox">
						@Html.EditorFor(model => model.IsHome)
						@Html.ValidationMessageFor(model => model.IsHome, "", new { @class = "TDngr" })
					</div>
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.IsApproved, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					<div class="checkbox">
						@Html.EditorFor(model => model.IsApproved)
						@Html.ValidationMessageFor(model => model.IsApproved, "", new { @class = "TDngr" })
					</div>
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.CategoryId, "Kategori", htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "TLBox" })
					@Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Kaydet" class="crt-btn" />
					@Html.ActionLink("Ürün Liste", "Index", null, new { @class = "crt-btn" })
				</div>
			</div>
		</div>
	}


	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>