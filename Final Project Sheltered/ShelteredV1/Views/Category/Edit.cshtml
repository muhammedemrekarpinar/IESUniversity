@model ShelteredV1.Entity.Category

@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="CtgryAdd">
	<h2>Kategori Düzenle</h2>


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">

			@Html.ValidationSummary(true, "", new { @class = "TDngr" })
			@Html.HiddenFor(model => model.Id)

			<div class="form-group">
				@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.Description, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Güncelle" class="crt-btn" />
					@Html.ActionLink("Kategori Liste", "Index", null, new { @class = "crt-btn" })
				</div>
			</div>
		</div>
	}



	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
	</div>