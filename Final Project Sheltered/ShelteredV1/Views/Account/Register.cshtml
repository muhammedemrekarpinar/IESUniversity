@model ShelteredV1.Models.Register

@{
	ViewBag.Title = "title";
}

<div class="CtgryAdd">
	<h2>Yeni Kullanıcı</h2>


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

	<div class="form-horizontal">

		@Html.ValidationSummary(true, "", new { @class = "TDngr" })
