			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "TBLabel" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "TBox" } })
				@Html.ValidationMessageFor(model => model.Surname, "", new { @class = "TDngr" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "TBLabel" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "TBox" } })
