@model ShelteredV1.Models.Login

@{
	ViewBag.Title = "title";
	
}

<div class="CtgryAdd">
	<h2>Kullanıcı Girişi</h2>


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">

			@Html.ValidationSummary(true, "", new { @class = "TDngr" })

			<div class="form-group">
				@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "TBox" } })
					@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "TDngr" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "TBLabel" })
				<div class="col-md-10">
					@Html.PasswordFor(model => model.Password, new { @class = "TBox" })
					@Html.ValidationMessageFor(model => model.Password, "", new { @class = "TDngr" })
				</div>
			</div>
			
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Giriş" class="crt-btn" />
				</div>
			</div>
		</div>
	}





	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>
