@model ShelteredV1.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<style>
	.field-validation-error{ color: #f00;}
	.field-validation-valid{display: none}
	.input-validation-error{ border: 1px solid #f00;}
	.validation-summary-errors{ font-weight: bold;color: #f00;}
	.validation-summary-errors ul li{ list-style: none;}
	.validation-summary-valid{display: none}
</style>

<div class="CtgryAdd">
	<h2>Sipariş Bilgileri</h2>
	<p style="margin-bottom: 1%; ">Lütfen Sipariş Bilgilerinizi Doldurunuz.</p>
	@using (Html.BeginForm())
	{
		@Html.ValidationSummary()
		<div class="form-group">
			<label style="text-align: left;">UserName</label>
			<br />
			<p>@User.Identity.Name</p>
		
			
		</div>
		<div class="form-group">
			<label>Adres Tanımı</label>
			<br />
			@Html.TextBoxFor(x => x.AdresBasligi, new { @class = "TBox" })
			
		</div>
		<div class="form-group">
			<label>Adres</label>
			<br />
			@Html.TextBoxFor(x => x.Adres, new { @class = "TBox" })
			
		</div>
		<div class="form-group">
			<label>Şehir</label>
			<br />
			@Html.TextBoxFor(x => x.Sehir, new { @class = "TBox" })
			
		</div>
		<div class="form-group">
			<label>Semt</label>
			<br />
			@Html.TextBoxFor(x => x.Semt, new { @class = "TBox" })
			
		</div>
		<div class="form-group">
			<label>Mahalle</label>
			<br />
			@Html.TextBoxFor(x => x.Mahalle, new { @class = "TBox" })
			
		</div>
		<div class="form-group">
			<label>Posta Kodu</label>
			<br />
			@Html.TextBoxFor(x => x.PostaKodu, new { @class = "TBox" })
			
		</div>
		<div class="form-group">
			<label></label>
			<button type="submit" class="crt-btn">Onayla</button>
		</div>
		
	}
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>